<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.ac.iitp.facedetection.Search"
    android:focusableInTouchMode="true">
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@mipmap/bg"
        android:scaleType="centerCrop"
        />
    <EditText
        android:id="@+id/ed_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_search"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/spinner_search"
        android:layout_toLeftOf="@+id/btn_search"
        android:layout_toRightOf="@+id/spinner_search"
        android:layout_toStartOf="@+id/btn_search"
        android:ems="10"
        android:padding="10dp"
        android:hint="Search"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:background="#661A050E"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#991A050E"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:text="Search"
        android:textAllCaps="false"/>

    <Spinner
        android:id="@+id/spinner_search"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_search"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#991A050E"/>

    <ListView
        android:id="@+id/listview_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ed_search" />
</RelativeLayout>
